{
    "compilerOptions": {
      "target": "ES2020",
      "lib": [
        "ES2020"
      ],
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "esModuleInterop": false
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }